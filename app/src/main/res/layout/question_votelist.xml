<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.neil.youarethevoter.MainActivity"
    android:background="@drawable/bg_gradient">

    <TextView android:id="@+id/tvText1"
        android:text="@string/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="55%"
        app:layout_marginTopPercent="10%"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView android:id="@+id/tvTextBlank"
        app:layout_marginTopPercent="10%"
        android:layout_height="3dp"
        android:layout_below="@+id/tvText1"
        app:layout_widthPercent="100%"
        android:background="@color/lightgreydivider"/>

    <ListView
        android:id="@+id/lvQuestionVoteList"
        android:layout_below="@+id/tvTextBlank"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="5px"
        android:headerDividersEnabled="true">
    </ListView>
</android.support.percent.PercentRelativeLayout>
