<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.neil.youarethevoter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InterestGroup" android:screenOrientation="portrait"/>
        <activity android:name=".Login" android:screenOrientation="portrait"/>
        <activity android:name=".Register" android:screenOrientation="portrait"/>
        <activity android:name=".QuestionsMenuList" android:screenOrientation="portrait"/>
        <activity android:name=".InterestGroupList" android:screenOrientation="portrait"/>
        <activity android:name=".QuestionVoteList" android:screenOrientation="portrait"/>
        <activity android:name=".QuestionVote" android:screenOrientation="portrait"/>
        <activity android:name=".VoteRegistered" android:screenOrientation="portrait"/>
        <activity android:name=".AccountSettings" android:screenOrientation="portrait"/>
        <activity android:name=".UpdateInterestGroupSettings" android:screenOrientation="portrait"/>
        <activity android:name=".SettingsMenu" android:screenOrientation="portrait"/>
    </application>

</manifest>